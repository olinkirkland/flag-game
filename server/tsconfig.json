{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@shared/*": ["../shared/src/*"]
        },
        "types": ["jest"]
    },
    "include": [
        "src/**/*.ts",
        "src/parsers/definitions.ts",
        "../shared/**/*.ts"
    ]
}
